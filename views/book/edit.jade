div
  form( method="post", action="/book/update", enctype="multipart/form-data")
    fieldset
        input(type='hidden', name='id', value= object.id)
        label(for='name') Name
        input#name(type='text', name='name', value= object.name, readonly= 'readonly')
        br
        label(for='author') Author
        input#author(type='text', name='author', value= object.author)
        br
        label(for='publish_time') Publish_time
        input#publish_time(type='date', name='publish_time', value= object.publish_time)
        br
        input(type="file", name="book")
        br
        input(type='submit', value='update')
br
a(href='/book/index') books
