div
  table(border='1')
    tr
      td Name
      td Author
      td Publish Time
      td Operation
    - for(var i=0; i<objects.length; i++)
        tr
          td= objects[i].name
          td= objects[i].author
          td= objects[i].publish_time
          td
            a(href='/book/edit?id=' + objects[i].id) edit
            br
            a(href='/book/destroy?id=' + objects[i].id) delete
            br
            a(href='/book/find?id=' + objects[i].id) show
            - if(!objects[i].is_split)
              br
              a(href='/book/split?id=' + objects[i].id + '&type=start&match=第.回') split
br
a(href='/book/new') add book
